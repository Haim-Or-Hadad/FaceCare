<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_view"
    tools:context=".admin_view">

    <Button
        android:id="@+id/weekly_workplan"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="weekly worlplan"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"

        />
    <Button
        android:id="@+id/myShifts"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="My Shifts"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/weekly_workplan"
        />

    <Button
        android:id="@+id/ManageAppointments"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Manage Appointments"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/myShifts"
        />
</RelativeLayout>