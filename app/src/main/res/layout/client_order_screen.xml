<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/client_order_screen"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/acne"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:drawableEnd="@drawable/acne_icon"
        android:text="acne" />

    <Button
        android:id="@+id/haircut"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:drawableEnd="@drawable/haircut_icon"
        android:text="haircut" />

    <Button
        android:id="@+id/beard"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:layout_below="@id/haircut"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:backgroundTintMode="add"
        android:drawableEnd="@drawable/beard_icon"
        android:text="beard"
        android:visibility="visible" />

    <Button
        android:id="@+id/classic_facial"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:layout_below="@id/haircut"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_marginLeft="200dp"
        android:drawableEnd="@drawable/facecare_icon"
        android:text="facecare" />


    <Button
        android:id="@+id/mySlots"
        android:layout_width="142dp"
        android:layout_height="50dp"
        android:layout_below="@id/calendarView2"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/listView"
        android:backgroundTint="#04dbcd"
        android:text="my appointments"
        android:textSize="10dp" />

    <CalendarView
        android:id="@+id/calendarView2"
        style="@android:style/Widget.Material.CalendarView"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_below="@id/classic_facial"
        android:animateLayoutChanges="false"
        android:animationCache="false"
        android:backgroundTint="#322525"
        android:backgroundTintMode="add"
        android:fadeScrollbars="false"
        android:maxDate="01/12/2023"
        android:minDate="01/12/202"
        android:selectedWeekBackgroundColor="#684646"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible"
        android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Body2" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="210dp"
        android:layout_height="180dp"
        android:layout_below="@+id/calendarView2"
        android:background="@drawable/gradient_normal" />

    <ListView
        android:id = "@+id/listCancelOrder"
        android:layout_width="210dp"
        android:layout_height="140dp"
        android:layout_below="@+id/mySlots"
        android:layout_toRightOf="@id/listView"
        android:background="@drawable/gradient_normal"

        />
</RelativeLayout>