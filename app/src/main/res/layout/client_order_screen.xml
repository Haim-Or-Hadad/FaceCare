<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/client_order_screen"
    tools:context=".MainScreen">

    <Button
        android:id="@+id/acne"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#a67041"
        android:drawableEnd="@drawable/acne_icon"
        android:text="acne" />

    <Button
        android:id="@+id/haircut"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#a67041"
        android:drawableEnd="@drawable/haircut_icon"
        android:text="haircut" />

    <Button
        android:id="@+id/beard"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:layout_below="@id/haircut"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#a67041"
        android:backgroundTintMode="add"
        android:drawableEnd="@drawable/beard_icon"
        android:text="beard"
        android:visibility="visible" />

    <Button
        android:id="@+id/classic_facial"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:layout_below="@id/haircut"
        android:backgroundTint="#a67041"
        android:layout_marginLeft="200dp"
        android:drawableEnd="@drawable/facecare_icon"
        android:text="facecare" />


    <Button
        android:id="@+id/mySlots"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/calendarView2"
        android:layout_marginStart="200dp"
        android:backgroundTint="#a67041"
        android:text="appointments"
        />

    <Button
        android:id="@+id/reset"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/calendarView2"
        android:layout_marginStart="68dp"
        android:backgroundTint="#a67041"
        android:text="reset"
      />

    <CalendarView
        android:id="@+id/calendarView2"
        style="@android:style/Widget.Material.CalendarView"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_below="@id/classic_facial"
        android:animateLayoutChanges="false"
        android:animationCache="false"
        android:backgroundTint="#322525"
        android:backgroundTintMode="add"
        android:fadeScrollbars="false"
        android:maxDate="01/12/2023"
        android:minDate="01/12/2022"
        android:selectedWeekBackgroundColor="#684646"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible"
        android:weekDayTextAppearance="@style/TextAppearance.AppCompat.Body2" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="400dp"
        android:layout_height="140dp"
        android:layout_below="@+id/mySlots"
        android:background="#bea18f" />
    <ProgressBar
        android:id="@+id/Progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="425dp"
        android:visibility="invisible"
        />
